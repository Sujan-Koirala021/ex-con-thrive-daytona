{
  "name": "React Dev Container",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:18",
  "features": {
    "python": "3.10"
  },
  "forwardPorts": [5173],
  "initializeCommand": "mkdir -p /home/node/.vscode-server/extensions",
  "postCreateCommand": "npm install && npm install @vscode/spdlog",
  "settings": {
    "editor.formatOnSave": true,
    "terminal.integrated.defaultProfile.linux": "bash"
  }
}
